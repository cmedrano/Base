@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Avícola App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Estilos específicos para los inputs de esta página */
        .login-input {
            background-color: #f0f2f5;
            border: none;
            height: 50px;
            padding-left: 15px;
            border-radius: 8px;
        }

            .login-input:focus {
                background-color: #e4e6e9;
                box-shadow: none;
                border: 1px solid #0d6efd;
            }
    </style>
</head>
<body class="bg-white">

    <div class="container-fluid p-0 overflow-hidden">
        <div class="row g-0 vh-100">

            <div class="col-md-6 d-flex align-items-center justify-content-center bg-white p-5">
                <div class="w-100" style="max-width: 400px;">

                    <div class="mb-5 text-center">
                        <h2 class="fw-bold text-dark display-6">Avícola App</h2>
                        <p class="text-muted">Ingresá tus credenciales para acceder.</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mb-4 rounded-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            }
                        </div>
                    }

                    <form action="/Acceso/Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">USUARIO</label>
                            <input type="text" name="usuario" class="form-control login-input" placeholder="nombre@ejemplo.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">CONTRASEÑA</label>
                            <input type="password" name="password" class="form-control login-input" placeholder="••••••••" required />
                        </div>

                        <div class="mb-4 form-check">
                            <input type="checkbox" class="form-check-input" id="checkRecordar">
                            <label class="form-check-label text-muted small" for="checkRecordar">Recordarme</label>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary py-2 fw-bold rounded-pill shadow-sm" style="background-color: #0d6efd; border:none;">
                                Ingresar al Sistema
                            </button>
                        </div>

                        @* <div class="d-flex justify-content-between small">
                            <a href="#" class="text-decoration-none text-muted">¿Olvidaste tu contraseña?</a>
                            <a href="#" class="text-decoration-none fw-bold text-primary">Crear cuenta nueva</a>
                        </div> *@
                    </form>

                    <div class="mt-5 text-center text-muted small">
                        &copy; 2026 AvicolaApp - Sistema de Gestión
                    </div>
                </div>
            </div>

            <div class="col-md-6 d-none d-md-block login-image-container p-0">
            </div>

        </div>
    </div>

</body>
</html>