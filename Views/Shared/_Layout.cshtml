<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AvicolaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AvicolaApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-white d-flex align-items-center gap-2 p-3">
                <i class="bi bi-egg-fill text-primary fs-4"></i>
                <div class="fw-bold fs-5 text-dark">AvícolaApp</div>
            </div>
            <div class="list-group list-group-flush mt-3">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3" style="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "background-color: transparent; color: #0d6efd;" : "")">
                    <i class="bi bi-columns-gap me-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "text-primary" : "text-secondary")"></i>
                    <span class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "text-primary fw-bold" : "")">Dashboard</span>
                </a>

                @* Solo mostrar Usuarios si es Administrador *@
                @if (User.IsInRole("Administrador"))
                {
                    <a asp-controller="Usuarios" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3" style="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuarios" ? "background-color: transparent; color: #0d6efd;" : "")">
                        <i class="bi bi-people-fill me-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuarios" ? "text-primary" : "text-secondary")"></i>
                        <span class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuarios" ? "text-primary fw-bold" : "")">Usuarios</span>
                    </a>
                }

                <a asp-controller="Clientes" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3" style="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Clientes" ? "background-color: transparent; color: #0d6efd;" : "")">
                    <i class="bi bi-people-fill me-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clientes" ? "text-primary" : "text-secondary")"></i>
                    <span class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Clientes" ? "text-primary fw-bold" : "")">Clientes</span>
                </a>
            </div>
            <div class="mt-auto p-3 border-top">
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center me-2" style="width: 32px; height: 32px;">
                            @* Mostrar iniciales del usuario *@
                            @if (User.Identity.IsAuthenticated)
                            {
                                <text>@User.Identity.Name?.Substring(0, 2).ToUpper()</text>
                            }
                            else
                            {
                                <text>JP</text>
                            }
                        </div>
                        <strong>@(User.Identity.IsAuthenticated? User.Identity.Name : "Juan Pérez")</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser1">
                        @*  <li><a class="dropdown-item" href="#">Mi Perfil</a></li>
                        <li><a class="dropdown-item" href="#">Configuración</a></li> *@
                        <li>
                            <form action="@Url.Action("Salir", "Acceso")" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; width: 100%; text-align: left; cursor: pointer;">
                                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="page-content-wrapper" class="w-100 bg-light">
            <nav class="navbar navbar-light bg-light border-bottom px-4 justify-content-end py-3">
            </nav>
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>